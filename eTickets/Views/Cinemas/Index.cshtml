@model IEnumerable<Cinema>

@{
    ViewData["Title"] = "List of Cinemas";
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(m => m.Logo)</th>
                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                    <th>@Html.DisplayNameFor(m => m.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cinema in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle"
                                src="@cinema.Logo" 
                                alt="@cinema.Name"
                                style="max-width:150px"/>
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(m => cinema.Name);
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(m => cinema.Description);
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i> Edit</a> |
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i> Details</a> |
                            <a class="btn btn-outline-danger"><i class="bi bi-trash"></i> Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>